{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "frontend/.next",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "backend/**",
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  }
}


{
  "info": {
    "name": "Eduhens Backend Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "BACKEND_URL", "value": "http://localhost:5001" },
    { "key": "ACCESS_TOKEN", "value": "" },
    { "key": "USER_ID", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{BACKEND_URL}}/api/health"
      }
    },
    {
      "name": "DB Connect",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{BACKEND_URL}}/api/db-connect"
      }
    },
    {
      "name": "Auth / Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{BACKEND_URL}}/api/auth/me"
      }
    },
    {
      "name": "Auth / Users (admin)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{BACKEND_URL}}/api/auth/users"
      }
    },
    {
      "name": "Auth / Assign Role (admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"role\": \"teacher\"\n}"
        },
        "url": "{{BACKEND_URL}}/api/auth/users/{{USER_ID}}/roles"
      }
    },
    {
      "name": "Auth / Remove Role (admin)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{BACKEND_URL}}/api/auth/users/{{USER_ID}}/roles/teacher"
      }
    }
  ]
}

